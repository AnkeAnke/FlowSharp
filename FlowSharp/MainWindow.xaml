<Window x:Class="FlowSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowSharp"
        xmlns:WPFHost="clr-namespace:WPFHost"
        mc:Ignorable="d"
        Title="WPF Window" Height="1303" Width="1600">
    <Grid Margin="0,0,0,-20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <WPFHost:DPFCanvas x:Name="DX11Display" HorizontalAlignment="Left" Height="1210" Width="1374" Margin="10,10,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="DropDownDisplay" HorizontalAlignment="Left" Margin="1419,201,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadDisplay" SelectionChanged="OnChangeDisplay"/>
        <ComboBox x:Name="DropDownDisplayLines" HorizontalAlignment="Left" Margin="1419,258,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadDisplayLines" SelectionChanged="OnChangeDisplayLines"/>
        <ComboBox x:Name="DropDownSlice0" HorizontalAlignment="Left" Margin="1419,314,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadSlice0" SelectionChanged="OnChangeSlice0"/>
        <ComboBox x:Name="DropDownSlice1" HorizontalAlignment="Left" Margin="1419,374,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadSlice1" SelectionChanged="OnChangeSlice1"/>
    </Grid>
</Window>
