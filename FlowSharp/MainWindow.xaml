<Window x:Class="FlowSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowSharp"
        xmlns:WPFHost="clr-namespace:WPFHost"
        mc:Ignorable="d"
        Title="WPF Window" Height="1303" Width="1650">
    <Grid Margin="0,0,0,-20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <WPFHost:DPFCanvas x:Name="DX11Display" HorizontalAlignment="Left" Height="1210" Width="1378" Margin="10,10,0,0" VerticalAlignment="Top" Focusable="True" IsEnabled="True" MouseEnter="ActivateCamera" MouseLeave="DeactivateCamera" IsHitTestVisible="True"/>
        <ComboBox x:Name="DropDownDisplay" HorizontalAlignment="Left" Margin="1419,112,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadDisplay" SelectionChanged="OnChangeDisplay"/>
        <ComboBox x:Name="DropDownDisplayLines" HorizontalAlignment="Left" Margin="1419,153,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadDisplayLines" SelectionChanged="OnChangeDisplayLines"/>
        <ComboBox x:Name="DropDownSlice0" HorizontalAlignment="Left" Margin="1419,240,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadSlice0" SelectionChanged="OnChangeSlice0"/>
        <ComboBox x:Name="DropDownSlice1" HorizontalAlignment="Left" Margin="1419,279,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadSlice1" SelectionChanged="OnChangeSlice1"/>
        <ComboBox x:Name="DropDownIntegrator" HorizontalAlignment="Left" Margin="1419,364,0,0" VerticalAlignment="Top" Width="120" Loaded="LoadIntegrator" SelectionChanged="OnChangeIntegrator"/>

        <!--<StackPanel HorizontalAlignment="Left" Height="61" Margin="1419,500,0,0" VerticalAlignment="Top" Width="163">
            <Slider Minimum ="0.001" Maximum="2" TickPlacement="BottomRight" Height="45" TickFrequency="0.01" SmallChange="0.001" LargeChange="0.01" AutoToolTipPlacement="BottomRight" Loaded="LoadStepSize" AutoToolTipPrecision="3"/>
        </StackPanel>-->
        <StackPanel HorizontalAlignment="Right" Height="85" Margin="0,572,4,0" VerticalAlignment="Top" Width="250">
            <TextBlock x:Name="StepSizeText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Step size for integration
                       " VerticalAlignment="Top" Width="163" FontSize="10"/>
            <Slider Name="step" Maximum="1.0" Minimum ="0.001" TickPlacement="BottomRight" TickFrequency="0.01" Height="45" SmallChange="0.001" LargeChange="0.01" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="3" Loaded="LoadStepSize" PreviewMouseUp="OnChangeStepSize"/>
            <TextBox Text="{Binding ElementName=step, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Left" TextAlignment="Right" Width="40" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Height="86" Margin="0,450,10,0" VerticalAlignment="Top" Width="244">
            <TextBlock x:Name="AlphaFFF" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Alpha for stable FFF computation" VerticalAlignment="Top" Width="163" FontSize="10"/>
            <Slider Name="alpha" Maximum="50" Minimum ="-50" TickPlacement="BottomRight" TickFrequency="5" Height="45" SmallChange="0.1" LargeChange="1" AutoToolTipPlacement="BottomRight" ValueChanged="OnChangeAlphaFFF"/>
            <TextBox Text="{Binding ElementName=alpha, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Left" TextAlignment="Right" Width="40" />
        </StackPanel>

    </Grid>
</Window>
